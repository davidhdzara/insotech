                     invisible="not enable_notifications">
                  <i class="fa fa-bell"/> 
                  Se enviar√°n notificaciones a los usuarios relevantes cuando cambie el estado de la entrega.
                </div>
              </group>
            </group>

            <group>
              <!-- Hidden: Required for multi-company support -->
              <field name="company_id" invisible="1"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Configuration Action - Opens the config form -->
    <record id="action_pos_delivery_config" model="ir.actions.act_window">
      <field name="name">Configuraci√≥n de Entregas</field>
      <field name="res_model">pos.delivery.config</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_pos_delivery_config_form"/>
      <field name="target">current</field>
    </record>

  </data>
</odoo>

