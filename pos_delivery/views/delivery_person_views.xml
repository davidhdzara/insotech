<odoo>
  <data>

    <!-- Delivery Person Form View -->
    <record id="view_delivery_person_form" model="ir.ui.view">
      <field name="name">res.partner.delivery.person.form</field>
      <field name="model">res.partner</field>
      <field name="arch" type="xml">
        <form string="Delivery Person">
          <sheet>
            <field name="image_1920" widget="image" class="oe_avatar"/>
            
            <div class="oe_title">
              <h1>
                <field name="name" placeholder="Delivery Person Name"/>
              </h1>
            </div>

            <group>
              <group string="Contact Information">
                <field name="phone" widget="phone"/>
                <field name="mobile" widget="phone"/>
                <field name="email" widget="email"/>
              </group>
              
              <group string="Delivery Information">
                <field name="delivery_person_code"/>
                <field name="vehicle_type"/>
                <field name="vehicle_plate"/>
                <field name="is_delivery_person" invisible="1"/>
              </group>
            </group>

            <group string="Statistics" name="stats">
              <group>
                <field name="total_deliveries" readonly="1"/>
                <field name="completed_deliveries" readonly="1"/>
                <field name="failed_deliveries" readonly="1"/>
              </group>
              <group>
                <field name="avg_rating" readonly="1" widget="float"/>
                <field name="avg_delivery_time" readonly="1" widget="float_time"/>
              </group>
            </group>

            <div class="oe_chatter">
              <field name="message_follower_ids" groups="base.group_user"/>
              <field name="activity_ids"/>
              <field name="message_ids"/>
            </div>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Delivery Person List View -->
    <record id="view_delivery_person_list" model="ir.ui.view">
      <field name="name">res.partner.delivery.person.list</field>
      <field name="model">res.partner</field>
      <field name="arch" type="xml">
        <list string="Delivery Persons">
          <field name="name"/>
          <field name="delivery_person_code"/>
          <field name="phone" widget="phone"/>
          <field name="vehicle_type"/>
          <field name="total_deliveries"/>
          <field name="completed_deliveries"/>
          <field name="avg_rating" widget="float" decoration-success="avg_rating &gt;= 4" 
                 decoration-warning="avg_rating &gt;= 3 and avg_rating &lt; 4"
                 decoration-danger="avg_rating &lt; 3"/>
          <field name="avg_delivery_time" widget="float_time"/>
        </list>
      </field>
    </record>

    <!-- Delivery Person Kanban View -->
    <record id="view_delivery_person_kanban" model="ir.ui.view">
      <field name="name">res.partner.delivery.person.kanban</field>
      <field name="model">res.partner</field>
      <field name="arch" type="xml">
        <kanban>
          <field name="id"/>
          <field name="name"/>
          <field name="phone"/>
          <field name="total_deliveries"/>
          <field name="completed_deliveries"/>
          <field name="avg_rating"/>
          <field name="vehicle_type"/>
          
          <templates>
            <t t-name="card">
              <div class="oe_kanban_card">
                <div class="oe_kanban_content">
                  <div class="o_kanban_image">
                    <img t-att-src="kanban_image('res.partner', 'image_128', record.id.raw_value)" 
                         alt="Avatar" class="o_image_64_max"/>
                  </div>
                  
                  <div class="oe_kanban_details">
                    <strong><field name="name"/></strong>
                    <div t-if="record.vehicle_type.raw_value">
                      <i class="fa fa-motorcycle"/> <field name="vehicle_type"/>
                    </div>
                    <div>
                      <i class="fa fa-phone"/> <field name="phone"/>
                    </div>
                    <div class="mt-2">
                      <span class="badge badge-pill badge-info">
                        <field name="total_deliveries"/> deliveries
                      </span>
                    </div>
                    <div t-if="record.avg_rating.raw_value > 0" class="mt-1">
                      â­ <field name="avg_rating"/> / 5
                    </div>
                  </div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <!-- Search View for Delivery Persons -->
    <record id="view_delivery_person_search" model="ir.ui.view">
      <field name="name">res.partner.delivery.person.search</field>
      <field name="model">res.partner</field>
      <field name="arch" type="xml">
        <search string="Search Delivery Persons">
          <field name="name"/>
          <field name="delivery_person_code"/>
          <field name="phone"/>
          <field name="vehicle_type"/>
          
          <filter string="All" name="all" domain="[]"/>
          
          <group expand="0" string="Group By">
            <filter string="Vehicle Type" name="group_vehicle" context="{'group_by': 'vehicle_type'}"/>
          </group>
        </search>
      </field>
    </record>

    <!-- Action for Delivery Persons -->
    <record id="action_delivery_person" model="ir.actions.act_window">
      <field name="name">Delivery Persons</field>
      <field name="res_model">res.partner</field>
      <field name="view_mode">kanban,list,form</field>
      <field name="domain">[('is_delivery_person', '=', True)]</field>
      <field name="context">{'default_is_delivery_person': True}</field>
      <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_delivery_person_kanban')}),
        (0, 0, {'view_mode': 'list', 'view_id': ref('view_delivery_person_list')}),
        (0, 0, {'view_mode': 'form', 'view_id': ref('view_delivery_person_form')})]"/>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Add your first delivery person
        </p>
        <p>
          Delivery persons should be portal users to avoid consuming licenses.
        </p>
      </field>
    </record>

    <!-- Delivery Zone Views -->
    <record id="view_delivery_zone_form" model="ir.ui.view">
      <field name="name">delivery.zone.form</field>
      <field name="model">delivery.zone</field>
      <field name="arch" type="xml">
        <form string="Delivery Zone">
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="code"/>
                <field name="active" widget="boolean_toggle"/>
              </group>
              <group>
                <field name="delivery_cost" widget="monetary"/>
                <field name="currency_id" invisible="1"/>
                <field name="estimated_time" widget="integer"/>
              </group>
            </group>
            
            <group>
              <field name="description" placeholder="Zone description..."/>
            </group>

            <group string="Statistics" name="stats">
              <group>
                <field name="delivery_count" readonly="1"/>
                <field name="avg_delivery_time" readonly="1" widget="float_time"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_delivery_zone_list" model="ir.ui.view">
      <field name="name">delivery.zone.list</field>
      <field name="model">delivery.zone</field>
      <field name="arch" type="xml">
        <list string="Delivery Zones">
          <field name="name"/>
          <field name="code"/>
          <field name="delivery_cost" widget="monetary"/>
          <field name="estimated_time"/>
          <field name="delivery_count"/>
          <field name="avg_delivery_time" widget="float_time"/>
          <field name="active" widget="boolean_toggle"/>
        </list>
      </field>
    </record>

    <record id="action_delivery_zone" model="ir.actions.act_window">
      <field name="name">Delivery Zones</field>
      <field name="res_model">delivery.zone</field>
      <field name="view_mode">list,form</field>
    </record>

  </data>
</odoo>

