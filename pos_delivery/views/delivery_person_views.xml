<odoo>
  <data>

    <!-- Delivery Person Form View -->
    <record id="view_delivery_person_form" model="ir.ui.view">
      <field name="name">res.partner.delivery.person.form</field>
      <field name="model">res.partner</field>
      <field name="arch" type="xml">
        <form string="Repartidor">
          <sheet>
            <field name="image_1920" widget="image" class="oe_avatar"/>
            
            <div class="oe_title">
              <h1>
                <field name="name" placeholder="Nombre del Repartidor"/>
              </h1>
            </div>

            <group>
              <group string="Informaci贸n de Contacto">
                <field name="email" widget="email" required="1"/>
              </group>
              
              <group string="Informaci贸n de Entrega">
                <field name="vehicle_type"/>
                <field name="vehicle_plate"/>
                <field name="is_delivery_person" invisible="1"/>
              </group>
            </group>

            <group string=" Documentaci贸n" name="documentation">
              <group>
                <field name="document_type"/>
                <field name="document_number"/>
              </group>
              <group>
                <field name="document_expedition_date"/>
                <field name="document_expiry_date"/>
              </group>
            </group>

            <group string=" Conexi贸n App M贸vil" name="connection">
              <group>
                <field name="is_online" widget="boolean" readonly="1"/>
                <field name="last_connection_display" readonly="1" string="ltima Conexi贸n"/>
                <field name="last_connection" readonly="1" widget="datetime"/>
              </group>
            </group>

            <group string="Estad铆sticas" name="stats">
              <group>
                <field name="total_deliveries" readonly="1"/>
                <field name="completed_deliveries" readonly="1"/>
                <field name="failed_deliveries" readonly="1"/>
              </group>
              <group>
                <field name="avg_delivery_time" readonly="1" widget="float_time"/>
              </group>
            </group>

            <div class="oe_chatter">
              <field name="message_follower_ids" groups="base.group_user"/>
              <field name="activity_ids"/>
              <field name="message_ids"/>
            </div>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Delivery Person List View -->
    <record id="view_delivery_person_list" model="ir.ui.view">
      <field name="name">res.partner.delivery.person.list</field>
      <field name="model">res.partner</field>
      <field name="arch" type="xml">
        <list string="Repartidores">
          <field name="name"/>
          <field name="email" widget="email"/>
          <field name="vehicle_type"/>
          <field name="is_online" widget="boolean" string="En L铆nea"/>
          <field name="last_connection_display" string="ltima Conexi贸n"/>
          <field name="total_deliveries"/>
          <field name="completed_deliveries"/>
          <field name="avg_delivery_time" widget="float_time"/>
        </list>
      </field>
    </record>

    <!-- Delivery Person Kanban View -->
    <record id="view_delivery_person_kanban" model="ir.ui.view">
      <field name="name">res.partner.delivery.person.kanban</field>
      <field name="model">res.partner</field>
      <field name="arch" type="xml">
        <kanban>
          <field name="id"/>
          <field name="name"/>
          <field name="email"/>
          <field name="total_deliveries"/>
          <field name="completed_deliveries"/>
          <field name="vehicle_type"/>
          <field name="image_128"/>
          <field name="is_online"/>
          <field name="last_connection_display"/>
          
          <templates>
            <t t-name="card">
              <div class="oe_kanban_card">
                <div class="oe_kanban_content">
                  <div class="o_kanban_image">
                    <field name="image_128" widget="image" class="o_image_64_max"/>
                    <div t-if="record.is_online.raw_value" class="o_kanban_image_fill_top" 
                         style="position: absolute; top: 0; right: 0; background: #28a745; color: white; padding: 2px 5px; border-radius: 3px; font-size: 10px;">
                      <i class="fa fa-circle"/> Online
                    </div>
                  </div>
                  
                  <div class="oe_kanban_details">
                    <strong><field name="name"/></strong>
                    <div t-if="record.vehicle_type.raw_value">
                      <i class="fa fa-motorcycle"/> <field name="vehicle_type"/>
                    </div>
                    <div>
                      <i class="fa fa-envelope"/> <field name="email"/>
                    </div>
                    <div class="text-muted">
                      <small>
                        <i class="fa fa-clock-o"/> <field name="last_connection_display"/>
                      </small>
                    </div>
                    <div class="mt-2">
                      <span class="badge badge-pill badge-info">
                        <field name="total_deliveries"/> entregas
                      </span>
                    </div>
                  </div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <!-- Search View for Delivery Persons -->
    <record id="view_delivery_person_search" model="ir.ui.view">
      <field name="name">res.partner.delivery.person.search</field>
      <field name="model">res.partner</field>
      <field name="arch" type="xml">
        <search string="Buscar Repartidores">
          <field name="name"/>
          <field name="email"/>
          <field name="vehicle_type"/>
          
          <filter string="Todos" name="all" domain="[]"/>
          
          <separator/>
          
          <group expand="0" string="Agrupar Por">
            <filter string="Tipo de Veh铆culo" name="group_vehicle" context="{'group_by': 'vehicle_type'}"/>
          </group>
        </search>
      </field>
    </record>

    <!-- Action for Delivery Persons -->
    <record id="action_delivery_person" model="ir.actions.act_window">
      <field name="name">Repartidores</field>
      <field name="res_model">res.partner</field>
      <field name="view_mode">kanban,list,form</field>
      <field name="domain">[('is_delivery_person', '=', True)]</field>
      <field name="context">{'default_is_delivery_person': True}</field>
      <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_delivery_person_kanban')}),
        (0, 0, {'view_mode': 'list', 'view_id': ref('view_delivery_person_list')}),
        (0, 0, {'view_mode': 'form', 'view_id': ref('view_delivery_person_form')})]"/>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          A帽ade tu primer repartidor
        </p>
        <p>
          Los repartidores deben ser usuarios del portal para evitar consumir licencias.
        </p>
      </field>
    </record>

    <!-- Delivery Zone Views -->
    <record id="view_delivery_zone_form" model="ir.ui.view">
      <field name="name">delivery.zone.form</field>
      <field name="model">delivery.zone</field>
      <field name="arch" type="xml">
        <form string="Zona de Entrega">
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="code"/>
                <field name="active" widget="boolean_toggle"/>
              </group>
              <group>
                <field name="delivery_cost" widget="monetary"/>
                <field name="currency_id" invisible="1"/>
                <field name="estimated_time" widget="integer"/>
              </group>
            </group>
            
            <group>
              <field name="description" placeholder="Descripci贸n de la zona..."/>
            </group>

            <group string="Estad铆sticas" name="stats">
              <group>
                <field name="delivery_count" readonly="1"/>
                <field name="avg_delivery_time" readonly="1" widget="float_time"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_delivery_zone_list" model="ir.ui.view">
      <field name="name">delivery.zone.list</field>
      <field name="model">delivery.zone</field>
      <field name="arch" type="xml">
        <list string="Zonas de Entrega">
          <field name="name"/>
          <field name="code"/>
          <field name="delivery_cost" widget="monetary"/>
          <field name="estimated_time"/>
          <field name="delivery_count"/>
          <field name="avg_delivery_time" widget="float_time"/>
          <field name="active" widget="boolean_toggle"/>
        </list>
      </field>
    </record>

    <record id="action_delivery_zone" model="ir.actions.act_window">
      <field name="name">Zonas de Entrega</field>
      <field name="res_model">delivery.zone</field>
      <field name="view_mode">list,form</field>
    </record>

  </data>
</odoo>

