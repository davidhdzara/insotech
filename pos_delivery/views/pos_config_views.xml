<odoo>
  <data>

    <!-- Extend POS Config Form View -->
    <record id="view_pos_config_form_delivery" model="ir.ui.view">
      <field name="name">pos.config.form.delivery</field>
      <field name="model">pos.config</field>
      <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
      <field name="arch" type="xml">
        
        <!-- Add Delivery Only field at the top, right after name -->
        <field name="name" position="after">
          <label for="is_delivery_only" string="Delivery Only Mode"/>
          <div>
            <field name="is_delivery_only" class="oe_inline"/>
            <span class="text-muted ms-2">Check this if this POS is only for delivery orders</span>
          </div>
        </field>

      </field>
    </record>

  </data>
</odoo>

