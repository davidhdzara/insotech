<odoo>
  <data noupdate="1">

    <!-- Module Category -->
    <record id="module_category_pos_delivery" model="ir.module.category">
      <field name="name">POS Delivery</field>
      <field name="sequence">50</field>
    </record>

    <!-- Delivery Person Group (Portal Users) -->
    <record id="group_delivery_person" model="res.groups">
      <field name="name">Delivery Person</field>
      <field name="category_id" ref="module_category_pos_delivery"/>
      <field name="implied_ids" eval="[(4, ref('base.group_portal'))]"/>
      <field name="comment">Portal users who can manage their own deliveries</field>
    </record>

    <!-- Delivery Manager Group -->
    <record id="group_delivery_manager" model="res.groups">
      <field name="name">Delivery Manager</field>
      <field name="category_id" ref="module_category_pos_delivery"/>
      <field name="implied_ids" eval="[(4, ref('point_of_sale.group_pos_manager'))]"/>
      <field name="comment">Users who can manage all deliveries and delivery persons</field>
    </record>

    <!-- Record Rules for Delivery Persons (Portal Users) -->
    <record id="delivery_order_delivery_person_rule" model="ir.rule">
      <field name="name">Delivery Person: Own Deliveries</field>
      <field name="model_id" ref="model_pos_delivery_order"/>
      <field name="domain_force">[('delivery_person_id', '=', user.partner_id.id)]</field>
      <field name="groups" eval="[(4, ref('group_delivery_person'))]"/>
      <field name="perm_read" eval="True"/>
      <field name="perm_write" eval="True"/>
      <field name="perm_create" eval="False"/>
      <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Record Rules for POS Users -->
    <record id="delivery_order_pos_user_rule" model="ir.rule">
      <field name="name">POS User: All Deliveries</field>
      <field name="model_id" ref="model_pos_delivery_order"/>
      <field name="domain_force">[(1, '=', 1)]</field>
      <field name="groups" eval="[(4, ref('point_of_sale.group_pos_user'))]"/>
      <field name="perm_read" eval="True"/>
      <field name="perm_write" eval="True"/>
      <field name="perm_create" eval="True"/>
      <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Record Rules for Delivery Managers -->
    <record id="delivery_order_manager_rule" model="ir.rule">
      <field name="name">Delivery Manager: All Deliveries</field>
      <field name="model_id" ref="model_pos_delivery_order"/>
      <field name="domain_force">[(1, '=', 1)]</field>
      <field name="groups" eval="[(4, ref('group_delivery_manager'))]"/>
      <field name="perm_read" eval="True"/>
      <field name="perm_write" eval="True"/>
      <field name="perm_create" eval="True"/>
      <field name="perm_unlink" eval="True"/>
    </record>

  </data>
</odoo>

